{
  // .vscode/tasks.json
  // requires mpremote to be installed globally (via pipx or pip)
  // also requires you add the following keybinding to your keybindings.json
  // {
  //  "key": "ctrl+r",
  //  "command": "workbench.action.tasks.runTask",
  //  "args": "Pico ▸ run main.py via mpremote",
  //  "when": "terminalFocus"
  //}
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Pico ▸ run main.py via mpremote",
      "type": "shell",
      "command": "mpremote",
      "args": [
        "connect", "auto",
        "mount", ".",
        "run", "main.py",
        "repl"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "echo": true
      },
      "problemMatcher": []
    }
  ]
}
